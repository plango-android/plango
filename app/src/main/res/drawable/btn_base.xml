<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 눌렸을 때 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#C96144"/>
            <corners android:radius="12dp"/>
            <stroke android:width="1dp" android:color="#B4543A"/>
        </shape>
    </item>

    <!-- 기본 상태 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DE7254"/>
            <corners android:radius="12dp"/>
            <stroke android:width="1dp" android:color="#DE7254"/>
        </shape>
    </item>

</selector>